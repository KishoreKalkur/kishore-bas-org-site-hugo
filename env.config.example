# BAS Website Environment Configuration Example
# Copy this file to env.config and modify as needed
# Source this file before running Hugo: source env.config

# Development Environment
export HUGO_BASEURL="http://localhost:1313/"
export HUGO_PORT="1313"
export HUGO_BIND="127.0.0.1"

# Production Environment (uncomment when building for production)
# export HUGO_BASEURL="https://bas.org.in/"
# export HUGO_ENV="production"

# Custom local development (examples)
# export HUGO_BASEURL="http://192.168.1.100:1313/"  # For testing on local network
# export HUGO_PORT="8080"                           # Use different port
# export HUGO_BIND="0.0.0.0"                        # Bind to all interfaces 